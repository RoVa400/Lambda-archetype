<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.2.0 https://maven.apache.org/xsd/archetype-descriptor-1.2.0.xsd" name="helloWorld"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <requiredProperties>
    <requiredProperty key="parentArtifactId"/>
    <requiredProperty key="artifactId"/>
    <requiredProperty key="parentGroupId"/>
    <requiredProperty key="groupId"/>
    <requiredProperty key="package"/>
    <requiredProperty key="version">
      <defaultValue>0.1.0</defaultValue>
    </requiredProperty>
    <requiredProperty key="httpMethod"/>
    <requiredProperty key="artifactIdCapitalized"/>
  </requiredProperties>

  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <includes>
        <include>pom.xml</include>
        <include>samconfig.toml</include>
        <include>template.yml</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
